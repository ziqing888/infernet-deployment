{
  "log_path": "infernet_node.log",
  "server": {
    "port": 4000,
    "rate_limit": {
      "num_requests": 60,
      "period": 60.0
    }
  },
  "redis": {
    "host": "redis",
    "port": 6379
  },
  "log": {
    "path": "infernet_node.log",
    "max_file_size": 1073741824,
    "backup_count": 2
  },
  "manage_containers": true,
  "forward_stats": true,
  "startup_wait": 60.0,
  "chain": {
    "enabled": true,
    "trail_head_blocks": 1,
    "rpc_url": "https://mainnet.base.org/",
    "registry_address": "0xe2F36C4E23D67F81fE0B278E80ee85Cf0ccA3c8d",
    "wallet": {
      "private_key": "your_private_key_here",
      "max_gas_limit": 5000000
    },
    "payment_address": "0xYourWalletAddress",
    "allowed_sim_errors": ["out of gas"],
    "snapshot_sync": {
      "sleep": 3,
      "batch_size": 800,
      "starting_sub_id": 160000,
      "sync_period": 30
    }
  },
  "docker": {
    "username": "your-username",
    "password": "your-password"
  },
  "containers": [
    {
      "id": "onnx-inference-2.0.0",
      "image": "ritualnetwork/onnx_inference_service:2.0.0",
      "description": "ONNX Inference Service",
      "command": "--bind=0.0.0.0:3000 --workers=2",
      "env": {},
      "external": true,
      "gpu": false,
      "port": 3000,
      "volumes": [],
      "allowed_addresses": [],
      "allowed_delegate_addresses": [],
      "allowed_ips": [],
      "accepted_payments": {},
      "generates_proofs": false
    },
    {
      "id": "infernet-anvil",
      "image": "ritualnetwork/infernet_anvil:latest",
      "description": "Infernet Anvil Service",
      "command": "--bind=0.0.0.0:3001 --workers=2",
      "env": {},
      "external": true,
      "gpu": false,
      "port": 3001,
      "volumes": [],
      "allowed_addresses": [],
      "allowed_delegate_addresses": [],
      "allowed_ips": [],
      "accepted_payments": {},
      "generates_proofs": false
    },
    {
      "id": "hello-world",
      "image": "ritualnetwork/hello-world-infernet:latest",
      "description": "Hello World Service",
      "command": "--config /config/config.json",
      "env": {},
      "external": false,
      "gpu": false,
      "port": 3002,
      "volumes": ["/path/to/config:/config"],
      "allowed_addresses": [],
      "allowed_delegate_addresses": [],
      "allowed_ips": [],
      "accepted_payments": {},
      "generates_proofs": true
    },
    {
      "id": "infernet-node",
      "image": "ritualnetwork/infernet_node:1.4.0",
      "description": "Infernet Node Service",
      "command": "--config /config/config.json",
      "env": {},
      "external": false,
      "gpu": false,
      "port": 4000,
      "volumes": ["/path/to/config:/config"],
      "allowed_addresses": [],
      "allowed_delegate_addresses": [],
      "allowed_ips": [],
      "accepted_payments": {},
      "generates_proofs": true
    },
    {
      "id": "deploy-fluentbit-1",
      "image": "fluent/fluent-bit:latest",
      "description": "Fluentbit Logging Service",
      "command": "/fluent-bit/bin/fluent-bit -c /fluent-bit/etc/fluent-bit.conf",
      "env": {},
      "external": false,
      "gpu": false,
      "port": 24224,
      "volumes": ["/path/to/fluentbit/config:/fluent-bit/etc"],
      "allowed_addresses": [],
      "allowed_delegate_addresses": [],
      "allowed_ips": [],
      "accepted_payments": {},
      "generates_proofs": false
    },
    {
      "id": "deploy-redis-1",
      "image": "redis:latest",
      "description": "Redis Cache Service",
      "command": "redis-server",
      "env": {},
      "external": false,
      "gpu": false,
      "port": 6379,
      "volumes": [],
      "allowed_addresses": [],
      "allowed_delegate_addresses": [],
      "allowed_ips": [],
      "accepted_payments": {},
      "generates_proofs": false
    }
  ]
}
